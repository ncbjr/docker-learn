        function toggleJSON() {
            const jsonOutput = document.getElementById('json-output');
            const button = document.querySelector('.json-toggle');
            
            if (jsonOutput.style.display === 'none' || jsonOutput.style.display === '') {
                jsonOutput.style.display = 'block';
                jsonOutput.textContent = JSON.stringify(usuarios, null, 2);
                button.textContent = 'ğŸ“„ Ocultar JSON';
            } else {
                jsonOutput.style.display = 'none';
                button.textContent = 'ğŸ“„ Ver dados em formato JSON';
            }
        }

        // Atualizar estatÃ­sticas dinamicamente
        function updateStats() {
            const activeUsers = usuarios.filter(u => u.status === 'ativo').length;
            const newToday = usuarios.filter(u => {
                const today = new Date().toDateString();
                const userDate = new Date(u.data_cadastro).toDateString();
                return today === userDate;
            }).length;

            document.getElementById('total-users').textContent = usuarios.length;
            document.getElementById('active-users').textContent = activeUsers;
            document.getElementById('new-today').textContent = newToday;
        }

        updateStats();
    </script>
